  mimetype     String
  size         Int
  path         String?
  createdById  String?
  createdBy    User?    @relation("FileUploadCreatedBy", fields: [createdById], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
